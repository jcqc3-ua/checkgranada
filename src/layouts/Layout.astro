---
// Diseño base de todas las páginas
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Visitas privadas exclusivas a la Alhambra de Granada' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Alhambra Tours Privados</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>
