  <Footer />
</Layout>

<script>
  import { obtenerReservas, actualizarReserva } from '../lib/reservasService.js';

  async function cargarReservas() {
    try {
      const tableBody = document.getElementById('tableBody');
      const noData = document.getElementById('noData');
      
      tableBody.innerHTML = '<tr><td colspan="8" class="loading">Cargando...</td></tr>';
      
      const reservas = await obtenerReservas();
      
      if (reservas.length === 0) {
        tableBody.innerHTML = '';
        noData.style.display = 'block';
        return;
      }
      
      noData.style.display = 'none';
      tableBody.innerHTML = reservas.map(r => `
        <tr>
          <td>${r.nombre}</td>
          <td>${r.email}</td>
          <td>${r.telefono}</td>
          <td>${r.personas}</td>
          <td>${r.visita}</td>
          <td>${r.fecha || '-'}</td>
          <td>
            <select class="status-select" data-id="${r.id}" value="${r.estado || 'pendiente'}">
              <option value="pendiente">Pendiente</option>
              <option value="confirmada">Confirmada</option>
              <option value="cancelada">Cancelada</option>
            </select>
          </td>
          <td>
            <button class="btn-delete" data-id="${r.id}">Eliminar</button>
          </td>
        </tr>
      `).join('');
      
      // Event listeners para cambiar estado
      document.querySelectorAll('.status-select').forEach(select => {
        select.addEventListener('change', async (e) => {
          const id = e.target.dataset.id;
          const nuevoEstado = e.target.value;
          await actualizarReserva(id, { estado: nuevoEstado });
          alert('Estado actualizado');
        });
      });
      
    } catch (error) {
      console.error('Error:', error);
      document.getElementById('tableBody').innerHTML = '<tr><td colspan="8" class="error">Error al cargar reservas</td></tr>';
    }
  }

  document.getElementById('btnRefresh').addEventListener('click', cargarReservas);

  document.getElementById('btnExport').addEventListener('click', async () => {
    const reservas = await obtenerReservas();
    const csv = [
      'Nombre,Email,TelÃ©fono,Personas,Visita,Fecha,Estado',
      ...reservas.map(r => `"${r.nombre}","${r.email}","${r.telefono}",${r.personas},"${r.visita}","${r.fecha || ''}","${r.estado || 'pendiente'}"`)
    ].join('\n');
    
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'reservas.csv';
    a.click();
  });

  cargarReservas();
</script>

<style>
  .admin-page {
    min-height: 100vh;
    background: var(--bg-light);
    padding: 2rem 0;
    margin-top: 60px;
  }

  h1 {
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-light);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .admin-container {
    background: var(--white);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow);
  }

  .controls {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .table-container {
    overflow-x: auto;
  }

  .reservas-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .reservas-table th {
    background: var(--bg-light);
    padding: 1rem;
    text-align: left;
    font-weight: 700;
    color: var(--text-dark);
    border-bottom: 2px solid var(--secondary);
  }

  .reservas-table td {
    padding: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .reservas-table tr:hover {
    background: rgba(0, 0, 0, 0.02);
  }

  .status-select {
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .btn-delete {
    padding: 0.4rem 0.8rem;
    background: #ff4757;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: background 0.3s;
  }

  .btn-delete:hover {
    background: #ff3838;
  }

  .loading,
  .error {
    text-align: center;
    padding: 2rem;
    color: var(--text-light);
  }

  .error {
    color: #c62828;
  }

  .no-data {
    text-align: center;
    padding: 3rem;
    color: var(--text-light);
  }

  @media (max-width: 768px) {
    .controls {
      flex-direction: column;
    }

    .reservas-table {
      font-size: 0.75rem;
    }

    .reservas-table th,
    .reservas-table td {
      padding: 0.5rem;
    }
  }
</style>
