---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Admin - Reservas" description="Panel de administraciÃ³n de reservas">
  <Header />

  <main class="admin-page">
    <div class="container">
      <h1>Panel de AdministraciÃ³n</h1>
      <p class="subtitle">GestiÃ³n de Reservas</p>

      <div class="admin-container">
        <div class="controls">
          <button id="btnRefresh" class="btn btn-primary">ðŸ”„ Actualizar</button>
          <button id="btnExport" class="btn btn-secondary">ðŸ“¥ Descargar CSV</button>
        </div>

        <div class="table-container">
          <table id="reservasTable" class="reservas-table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>TelÃ©fono</th>
                <th>Personas</th>
                <th>Visita</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tableBody">
              <tr>
                <td colspan="8" class="loading">Cargando reservas...</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div id="noData" class="no-data" style="display: none;">
          <p>No hay reservas disponibles</p>
        </div>
      </div>
    </div>
